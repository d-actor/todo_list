<h1>Todos</h1>

<%= render 'layouts/navbar' %>
  <%= yield %>

<hr>
<p><%= link_to 'New Todo', new_todo_path %></p>

<% @todos.each do |todo| %>
  <h2><%= todo.title %></h2>
  <%= link_to 'Show Todo', todo_path(todo) %>
  <%= link_to 'Edit Todo', edit_todo_path(todo) %>
  <%= link_to 'Delete Todo', todo, method: :delete %>
<% end %>
